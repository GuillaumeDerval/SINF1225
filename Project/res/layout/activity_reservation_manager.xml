<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rsv_manager"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" > 
	
	<TableLayout 
	  android:id="@+id/rsv_manager_table"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">
	  
	    
	  <TableRow>
	   
	   <TextView
	  	android:id="@+id/rsvDate"
	    android:textColor="@android:color/white"
	    android:gravity="center_horizontal"
	    android:layout_weight="1"
	    android:layout_margin="1dp"
	    android:background="@color/green"
	    android:text="@string/rsv_date" />
	   
	   <TextView
	  	android:id="@+id/rsvTime"
	    android:textColor="@android:color/white"
	    android:gravity="center_horizontal"
	    android:layout_weight="1"
	    android:layout_margin="1dp"
	    android:background="@color/green"
	    android:text="@string/rsv_time" />
	   
	   <TextView
	  	android:id="@+id/rsvRest"
	    android:textColor="@android:color/white"
	    android:gravity="center_horizontal"
	    android:layout_weight="1"
	    android:layout_margin="1dp"
	    android:background="@color/green"
	    android:text="@string/rsv_rest" />
	   
	   <TextView
	    android:textColor="@android:color/white"
	    android:gravity="center_horizontal"
	    android:layout_weight="1"
	    android:layout_margin="1dp"
	    android:background="@color/green"
	    android:text="@string/rsv_nb_people" />
	   
	  </TableRow>
	 </TableLayout>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:background="@color/green"
	    android:textColor="@android:color/white"
	    android:text="@string/rsv_edit" />
	
</LinearLayout>