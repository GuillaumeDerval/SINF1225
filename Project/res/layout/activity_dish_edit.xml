<?xml version="1.0" encoding="utf-8"?>  
<ScrollView  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/ScrollView01"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:scrollbars="vertical">  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
  

    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    		<TextView
    	    android:id="@+id/textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Nom" />
    		<EditText
        	android:id="@+id/EditDishName"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="textPersonName"
        	android:text="Name" >
        	</EditText> 
  		</LinearLayout>

  		
    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    		<TextView
    	    android:id="@+id/textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="CatÃ©gorie" />
    		<EditText  
    		android:id="@+id/EditDishCategory"  
   			android:layout_height="wrap_content"    
    		android:layout_width="fill_parent"
    		android:text="Category" >  
			</EditText> 
		</LinearLayout>
    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    		<TextView
    	    android:id="@+id/textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Prix" />
        	<EditText
        	android:id="@+id/EditDishPrice"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="Price" >
        	</EditText>
		</LinearLayout>
    		
    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        	<TextView
    	    android:id="@+id/textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Plat disponibles" />
           <EditText  
        	android:id="@+id/EditDishAvailable"  
        	android:layout_height="wrap_content"  
        	android:layout_width="fill_parent"
        	android:text="Available">  
    		</EditText>
		</LinearLayout>
    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
            <TextView
    	    android:id="@+id/textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Description" />
            <EditText  
        	android:id="@+id/EditDishDescription"  
        	android:layout_height="wrap_content"  
        	android:layout_width="fill_parent"
         	android:lines="3"  
        	android:text="Description">  
    		</EditText>
    	</LinearLayout>
            <CheckBox
                android:id="@+id/EditDishSpicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy" />
            <CheckBox
                android:id="@+id/EditDishVegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegan" />
            <CheckBox
                android:id="@+id/EditDishAllergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/buttonDishApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Apply" />

                <Button
                    android:id="@+id/buttonDishDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Delete" />

                <Button
                    android:id="@+id/dishImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Image" />

            </LinearLayout>

    </LinearLayout>  
</ScrollView> 